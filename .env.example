# ==================== Database Configuration ====================
DATABASE_URL=postgresql://username:password@localhost:5432/ridewire_db

# ==================== JWT Configuration ====================
# JWT Secret (use a strong random string - at least 32 characters)
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRATION=24h

# ==================== Server Configuration ====================
PORT=3000
NODE_ENV=development

# ==================== Frontend Configuration ====================
REACT_APP_API_URL=http://localhost:3000

# ==================== AI API Keys ====================
# OpenAI (ChatGPT)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
CLAUDE_API_KEY=sk-ant-your-anthropic-api-key-here

# Google (Gemini)
GOOGLE_API_KEY=your-google-api-key-here
GEMINI_API_KEY=your-google-api-key-here

# ==================== Email Configuration ====================
# SMTP settings for sending emails
SMTP_HOST=smtp.stepheniesgem.io
SMTP_PORT=587
SMTP_USER=noreply@stepheniesgem.io
SMTP_PASS=your_email_password_here

# Email addresses
EMAIL_SUPPORT=support@stepheniesgem.io
EMAIL_HELLO=hello@stepheniesgem.io
EMAIL_AIHUB=aihub@stepheniesgem.io
EMAIL_TEAM=team@stepheniesgem.io

# ==================== Legal Configuration ====================
LEGAL_DISCLAIMER_VERSION=1.0.0
REQUIRE_DISCLAIMER_ACCEPTANCE=true

# ==================== Supabase Configuration (Optional) ====================
# Only needed if using Supabase instead of local PostgreSQL
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here

# ==================== Security Configuration ====================
# Encryption key for message encryption (AES-256)
ENCRYPTION_KEY=your_32_character_encryption_key

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3001,http://localhost:3000

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==================== Feature Flags ====================
ENABLE_MULTI_AI=true
ENABLE_AR_FEATURES=false
ENABLE_DIAGNOSTIC_FEATURES=true

# ==================== Development/Debug ====================
DEBUG=false
LOG_LEVEL=info
